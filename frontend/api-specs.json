  "components": {
    "schemas": {
      "AnswerDto": {
        "type": "object",
        "properties": {
          "questionId": {
            "type": "string",
            "format": "uuid"
          },
          "selectedOption": {
            "$ref": "#/components/schemas/OptionChoice"
          }
        },
        "additionalProperties": false
      },
      "CreateQuestionDto": {
        "required": [
          "optionA",
          "optionB",
          "optionC",
          "optionD",
          "text"
        ],
        "type": "object",
        "properties": {
          "text": {
            "maxLength": 500,
            "minLength": 1,
            "type": "string"
          },
          "optionA": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "optionB": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "optionC": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "optionD": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "order": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "CreateSurveyDto": {
        "required": [
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "maxLength": 200,
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "maxLength": 1000,
            "type": "string",
            "nullable": true
          },
          "questions": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreateQuestionDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "OptionChoice": {
        "enum": [
          "A",
          "B",
          "C",
          "D"
        ],
        "type": "string"
      },
      "QuestionDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "text": {
            "type": "string",
            "nullable": true
          },
          "optionA": {
            "type": "string",
            "nullable": true
          },
          "optionB": {
            "type": "string",
            "nullable": true
          },
          "optionC": {
            "type": "string",
            "nullable": true
          },
          "optionD": {
            "type": "string",
            "nullable": true
          },
