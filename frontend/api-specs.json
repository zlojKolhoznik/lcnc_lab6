          "questionId": {
            "type": "string",
            "format": "uuid"
          },
          "text": {
            "type": "string",
            "nullable": true
          },
          "countA": {
            "type": "integer",
            "format": "int32"
          },
          "countB": {
            "type": "integer",
            "format": "int32"
          },
          "countC": {
            "type": "integer",
            "format": "int32"
          },
          "countD": {
            "type": "integer",
            "format": "int32"
          },
          "totalResponses": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "participantId": {
            "type": "string",
            "nullable": true
          },
          "submittedAt": {
            "type": "string",
